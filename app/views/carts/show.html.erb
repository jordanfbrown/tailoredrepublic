<div class="content-wrapper">
  <h1>Shopping Cart</h1>
  <div class="twelve columns">
    <div class="cart-wrapper">
      <% @cart.cart_items.each do |cart_item| %>
        <%= render cart_item %>
      <% end %>
      <% if @cart.empty? %>
        <p>You haven't added anything to your cart yet.</p>
        <a href="shop" class="button">Go To Shop</a>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
    new TR.Views.Cart();
  });
</script>