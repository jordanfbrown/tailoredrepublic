<%= render 'shared/form_errors', resource: user %>
<%= fields_for user do |u| %>
  <%= u.label :name %>
  <%= u.text_field :name %>
  <%= u.label :email %>
  <%= u.text_field :email %>
  <%= u.label :password %>
  <%= u.password_field :password, value: @password ? @password : '' %>
  <%= u.label :password_confirmation, 'Confirm Password' %>
  <%= u.password_field :password_confirmation, value: @password ? @password : '' %>
<% end %>