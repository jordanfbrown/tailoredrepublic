<%= render 'shared/form_errors', resource: user %>
<%= form_for user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password, value: @password ? @password : '' %>
  <%= f.label :role %>
  <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  <%= f.submit 'Update User', class: 'button full-width large' %>
<% end %>