<% title_helper('Get A Free Measuring Tape') %>

<div class="row">
  <div class="six columns centered">
    <h2>Get a Free Measuring Tape</h2>
    <div class="outlined">
      <p class="bold">Enter your name, address, and e-mail and we will send you a free Tailored Republic measuring tape.</p>
      <% unless user_signed_in? %>
        <p class="bold">If you have an account with a shipping address, <%= link_to 'sign in to autofill your address.', new_user_session_path %> </p>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="six columns centered">
    <%= form_for @tape_measure_request, html: { class: 'outlined' } do |f| %>
      <%= render 'shared/form_errors', resource: @tape_measure_request %>
      <%= render 'addresses/nested_form', parent_form: f, address_type: :shipping_address %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.submit 'Submit', class: 'button large full-width' %>
  <% end %>
  </div>
</div>