<div class="row">
  <div class="twelve columns">
    <%= form_for("user", :url => user_session_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <%= f.submit 'Sign in', :class => "button" %>
      <%= link_to "Forgot your password?", new_password_path('user') %>
    <% end %>
  </div>
</div>
