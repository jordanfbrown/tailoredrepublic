
<div class="six columns centered">
  <h2>Register</h2>
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'outlined' } do |f| %>
    <%= devise_error_messages! %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div><%= f.submit "Sign Up", class: "button full-width" %></div>
  <% end %>
</div>

