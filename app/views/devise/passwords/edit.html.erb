<% title_helper('Change Password') %>

<div class="row">
  <div class="six columns centered">
    <h2>Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'outlined' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, data: { typetoggle: '#show_password' } %>
      <label><input type="checkbox" id="show_password">Show password</label>
      <%= f.submit "Change Password", class: 'button full-width large' %>
    <% end %>
  </div>
</div>

<script>
  $(function() {
    $('#user_password').showPassword();
  });
</script>
