<div id="new-order" class="row">
  <div class="six columns push-six">
    <h3>Cart Summary</h3>
    <% @cart.line_items.each do |line_item| %>
      <p><%= line_item.product.name %> // $<%= line_item.total_price %></p>
    <% end %>
    <p>Total: $<%= @cart.total_price %></p>
  </div>
  <div class="six columns pull-six">
    <div id="stripe_error" class="error">
      <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
    </div>
    <h3>Order</h3>
    <%= form_for(@order) do |f| %>
      <%= f.hidden_field :stripe_card_token %>
      <% if user_signed_in? %>
        <p>Welcome back, <%= current_user.name %>. Please verify that the details below are correct.</p>
      <% else %>
        <fieldset>
          <legend>Create an Account</legend>
          <% if @user.errors.any? %>
            <p class="error">There was some problems creating your account:</p>
            <ul class="error">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          <% end %>
          <%= label :user, :email, 'Email' %>
          <%= text_field :user, :email, value: 'test@test.com' %>
          <%= label :user, :password, 'Password' %>
          <%= password_field :user, :password, value: 'abc123' %>
          <%= label :user, :password_confirmation, 'Confirm Password' %>
          <%= password_field :user, :password_confirmation, value: 'abc123' %>
        </fieldset>
      <% end %>
      <fieldset>
        <legend>Shipping Address</legend>
        <%= fields_for @order.shipping_address do |shipping_address_form| %>
          <%= shipping_address_form.label 'Name' %>
          <%= shipping_address_form.text_field :name, value: 'Jordan Brown' %>
          <%= shipping_address_form.label 'Address' %>
          <%= shipping_address_form.text_field :line1, value: '11 Downey St.' %>
          <%= shipping_address_form.label 'Address 2 (Optional)' %>
          <%= shipping_address_form.text_field :line2 %>
          <div class="row">
            <div class="six columns">
              <%= shipping_address_form.label 'City' %>
              <%= shipping_address_form.text_field :city, value: 'San Francisco' %>
            </div>
            <div class="three columns">
              <%= shipping_address_form.label 'State' %>
              <%= shipping_address_form.select :state, us_states, selected: 'CA' %>
            </div>
            <div class="three columns">
              <%= shipping_address_form.label 'Zip' %>
              <%= shipping_address_form.text_field :zip, value: '94117' %>
            </div>
          </div>
        <% end %>
      </fieldset>
      <fieldset>
        <legend>Payment Information</legend>
          <div class="payment-errors error" style="display: none;">
            <p></p>
          </div>
          <%= label_tag :card_number, "Credit Card Number" %>
          <%= text_field_tag :card_number, nil, name: nil, autocomplete: 'off', value: '4242424242424242' %>
          <%= label_tag :card_code, "Security Code on Card (CVV)" %>
          <%= text_field_tag :card_code, nil, name: nil, autocomplete: 'off', value: '123' %>
          <%= label_tag :card_month, "Card Expiration" %>
        <div class="row">
          <div class="six columns">
            <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
          </div>
          <div class="six columns">
            <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
          </div>
        </div>
        <label><input type="checkbox" name="billing-same-as-shipping" class="billing-shipping-label"> Billing address is the same as the shipping address.</label>
        <%= fields_for @order.billing_address do |billing_address_form| %>
          <%= billing_address_form.label 'Name' %>
          <%= billing_address_form.text_field :name %>
          <%= billing_address_form.label 'Address' %>
          <%= billing_address_form.text_field :line1 %>
          <%= billing_address_form.label 'Address 2 (Optional)' %>
          <%= billing_address_form.text_field :line2 %>
          <div class="row">
            <div class="six columns">
              <%= billing_address_form.label 'City' %>
              <%= billing_address_form.text_field :city %>
            </div>
            <div class="three columns">
              <%= billing_address_form.label 'State' %>
              <%= billing_address_form.select :state, us_states %>
            </div>
            <div class="three columns">
              <%= billing_address_form.label 'Zip' %>
              <%= billing_address_form.text_field :zip %>
            </div>
          </div>
        <% end %>
      </fieldset>
      <%= f.submit 'Submit Order', class: 'button full-width large' %>
    <% end %>
  </div>
</div>

<script>
  $(function() {
    new TR.Views.Order();
  });
</script>
