<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Tailored Republic" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Tailored Republic" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
    <%= tag :meta, :name => "stripe-key", :content => ::STRIPE_PUBLIC_KEY %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <script>
      TR.ASSET_HOST = '<%= TailoredRepublic::Application.config.action_controller.asset_host.call %>';
      if(location.protocol === 'https:') {
        TR.ASSET_HOST.replace('http', 'https');
      }
    </script>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div id="container" class="container">
      <%= render "layouts/nav" %>
      <% if controller_name == "home" %>
        <div id="main" role="main">
          <%= yield %>
        </div>
      <% else %>
        <div id="main" role="main">
          <div id="flashes">
            <% flash.each do |key, msg| %>
              <div class="flash <%= key %>">
                <%= msg %>
              </div>
            <% end %>
          </div>
          <%= yield %>
          <div class="clear-footer"></div>
        </div>
        <%= render "layouts/footer" %>
      <% end %>
    </div>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-33503063-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

      $(function() {
        new TR.Views.Nav({user: <%= @user_data.to_json.html_safe %>});
        new TR.Views.Footer();
      });
    </script>
  </body>
</html>
