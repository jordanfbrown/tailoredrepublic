<%= form_for(@product) do |f| %>
  <%= render 'shared/form_errors', resource: @product %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.enum_select :category %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :image_large_url %>
    <%= f.text_field :image_large_url %>
  </div>
  <div class="field">
    <%= f.label :image_small_1_url %>
    <%= f.text_field :image_small_1_url %>
  </div>
  <div class="field">
    <%= f.label :image_small_2_url %>
    <%= f.text_field :image_small_2_url %>
  </div>
  <div class="field">
    <%= f.label :image_small_3_url %>
    <%= f.text_field :image_small_3_url %>
  </div>
  <div class="field">
    <%= f.label :image_small_4_url %>
    <%= f.text_field :image_small_4_url %>
  </div>
  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
