<%= form_for(@product) do |f| %>
  <%= render 'shared/form_errors', resource: @product %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.enum_select :category %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :summary %>
  <%= f.text_field :summary %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.label :image_large_url %>
  <%= f.text_field :image_large_url %>
  <%= f.label :image_small_1_url %>
  <%= f.text_field :image_small_1_url %>
  <%= f.label :image_small_2_url %>
  <%= f.text_field :image_small_2_url %>
  <%= f.label :image_small_3_url %>
  <%= f.text_field :image_small_3_url %>
  <%= f.label :image_small_4_url %>
  <%= f.text_field :image_small_4_url %>
  <%= f.submit class: "button" %>
<% end %>
