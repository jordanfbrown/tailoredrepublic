<div class="product-wrapper three columns" data-id="<%= product.id %>">
  <%= link_to(image_tag(product.default_photo.photo.url(:medium)), product) if product.default_photo %>
  <div class="product-info-wrapper">
    <div class="product-info">
      <div class="product-name">
        <%= link_to product do %>
          <%= product.name %> <span class="divider">//</span> <span class="dollar">$</span><%= product.display_price %>
        <% end %>
      </div>
    </div>
  </div>
</div>
