<div class="twelve columns">
  <h2>Products</h2>

  <p id="notice"><%= notice %></p>

  <table>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Image Large URL</th>
      <th>Image Small 1 URL</th>
      <th>Image Small 2 URL</th>
      <th>Image Small 3 URL</th>
      <th>Image Small 4 URL</th>
      <th></th>
      <th></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.category %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.image_large_url %></td>
      <td><%= product.image_small_1_url %></td>
      <td><%= product.image_small_2_url %></td>
      <td><%= product.image_small_3_url %></td>
      <td><%= product.image_small_4_url %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <%= link_to 'New Product', new_product_path, class: "button" %>
  <br />
</div>
