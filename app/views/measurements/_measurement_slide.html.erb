<li class="measurement-list-item" data-measurement="<%= measurement %>">
  <div class="six columns">
    <div class="video-container">
      <iframe width="560" height="315"
              src="http://www.youtube.com/embed/<%= metadata[:url] %>?frameborder=0&autohide=1&controls=0&rel=0&modestbranding=1&showinfo=0"
              frameborder="0" allowfullscreen data-src="http://www.youtube.com/embed/<%= metadata[:url] %>?frameborder=0&autohide=1&controls=0&rel=0&modestbranding=1&showinfo=0"></iframe>
    </div>
  </div>
  <div class="six columns">
    <div class="row">
      <h4 class="four columns"><%= titleize measurement %></h4>
      <div class="four columns">
        <a href="#" class="button previous" style="display: none;">Previous</a>
      </div>
      <div class="four columns">
        <a href="#" class="button next">Next</a>
      </div>
    </div>
    <ul class="disc">
      <% metadata[:steps].each do |step| %>
        <li><%= step %></li>
      <% end %>
    </ul>
    <div class="measuring-tape">
      <div class="pointer"></div>
    </div>
    <form>
      <input type="text" class="measurement-input" name="<%= measurement[0] %>">
      <p class="error" style="display: none;">Please enter a number between 0 and 90.</p>
    </form>
    <p>Slide the measuring tape or type in your measurement in inches to the nearest 0.25" and press enter.</p>
  </div>
</li>