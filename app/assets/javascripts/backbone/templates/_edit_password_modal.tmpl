<div class="row">
  <div class="twelve columns">
    <h2>Update Password</h2>
    <p class="error" style="display: none;">There were some problems updating your password:</p>
    <ul class="error" style="display: none;"></ul>
    <form accept-charset="UTF-8" action="/users" class="edit_user" id="edit_user" method="put">
      <label for="user_password">Password</label>
      <input autocomplete="off" id="user_password" name="user[password]" size="30" type="password" />
      <label for="user_password_confirmation">Password confirmation</label>
      <input id="user_password_confirmation" name="user[password_confirmation]" size="30" type="password" />
      <div class="row">
        <div class="six columns">
          <input class="button full-width" name="commit" type="submit" value="Update" />
        </div>
        <div class="six columns">
          <a href="#" class="button full-width cancel">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>